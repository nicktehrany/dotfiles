# Decrypt password
source "gpg -d ~/.mutt/pass.gpg |"

# Theme
source ~/.mutt/gruvbox/colors-gruvbox-shuber.muttrc
source ~/.mutt/gruvbox/colors-gruvbox-shuber-extended.muttrc

set editor = "nvim"
set imap_user=nicktehrany1@gmail.com
set imap_passive=yes
set imap_keepalive=300
set folder=imaps://imap.gmail.com
set folder = "~/.mail"
unmailboxes *
mailboxes =INBOX =[Gmail]/Drafts =[Gmail]/'Sent Mail' =[Gmail]/Spam
set sendmail="sendmail"
set spoolfile=+INBOX \
    record=+ \
    postponed=+[Gmail]/Drafts \
    record=+[Gmail]/Drafts \
    smtp_url=smtps://nicktehrany1@smtp.gmail.com \
    smtp_pass=$imap_pass \
    from=nicktehrany1@gmail.com

set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates
